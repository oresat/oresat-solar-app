/* Common dts file to enable supported features for CPU 0.
 * This file is included by both the default variant
 * which is run from internal flash and the QSPI variant.
 */
/dts-v1/;

#include <nxp/nxp_mcxn94x.dtsi>
#include "mcxn947_solar_card.dtsi"
#include <zephyr/dt-bindings/adc/adc.h>
#include <zephyr/dt-bindings/adc/mcux-lpadc.h>


/ {
	cpus {
		/delete-node/ cpu@1;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash;
		zephyr,flash-controller = &fmu;
		zephyr,code-partition = &slot0_partition;
		zephyr,uart-mcumgr = &flexcomm4_lpuart4;
		zephyr,console = &flexcomm4_lpuart4;
		zephyr,shell-uart = &flexcomm4_lpuart4;
		zephyr,canbus = &flexcan0;
		zephyr,code-cpu1-partition = &slot1_partition;
	};

	aliases{
		watchdog0 = &wwdt0;
		pwm-0 = &flexpwm1_pwm0;
		pwm-1 = &sc_timer;
		rtc = &rtc;
	};

	zephyr,user {
		dac = <&dac1>;
		dac-channel-id = <1>;
		dac-resolution = <12>;
		status = "okay";
	};
};

/*
 * Default for this board is to allocate SRAM0-5 to cpu0 but the
 * application can have an application specific device tree to
 * allocate the SRAM0-7 differently.
 *
 * For example, SRAM0-6 could be allocated to cpu0 with only SRAM7
 * for cpu1. This would require the value of sram0 to have a DT_SIZE_K
 * of 384. You would have to make updates to cpu1 sram settings as well.
 */
&sram0 {
	compatible = "mmio-sram";
	reg = <0x20000000 DT_SIZE_K(320)>;
};

&mbox {
	status = "okay";
};

&gpio4 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio2 {
	status = "okay";
};

&red_led {
	status = "okay";
};

&edma0 {
	status = "okay";
};

&flexcomm0 {
	status = "okay";
};

&flexcomm0_lpi2c0 {
	status = "okay";
};

&flexcomm1 {
	status = "disabled";
};

&flexcomm1_lpspi1 {
	status = "disabled";
};

&flexcomm2 {
	status = "disabled";
};

&flexcomm2_lpi2c2 {
	status = "disabled";
};

&flexcomm2_lpuart2 {
	status = "disabled";
};

&flexcomm4 {
	status = "okay";
};

&flexcomm4_lpuart4 {
	status = "okay";
};

&flexspi {
	status = "disabled";
};

&dac0 {
	status = "okay";
};

&enet {
	status = "disabled";
};

&enet_mac {
	status = "disabled";
};

&enet_mdio {
	status = "disabled";
};

&wwdt0 {
	status = "okay";
};

&flexpwm1_pwm0 {
	status = "okay";
};

&flexcan0 {
	status = "okay";
};

&ctimer0 {
	status = "okay";
};

&usdhc0 {
	status = "disabled";
	sdmmc {
		compatible = "zephyr,sdmmc-disk";
		disk-name = "SD";
		status = "disabled";
	};
};

&vref {
	status = "okay";
};

&lpadc0 {
	status = "okay";
};

zephyr_udc0: &usb1 {
	status = "disabled";
	phy-handle = <&usbphy1>;
};

&usbphy1 {
	status = "disabled";
	tx-d-cal = <4>;
	tx-cal-45-dp-ohms = <7>;
	tx-cal-45-dm-ohms = <7>;
};

&lpcmp0 {
	status = "okay";
};

&lptmr0 {
	status = "okay";
};

&i3c1 {
	status = "disabled";
};

&flexio0 {
	status = "okay";
};

&mrt0_channel0 {
	status = "okay";
};

&rtc {
	status = "okay";
};

&sc_timer {
	status = "okay";
};

&sai1 {
	status = "disabled";
};
&sai0 {
	status = "disabled";
};
